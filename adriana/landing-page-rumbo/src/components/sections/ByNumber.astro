---
import Container from "../shared/Container.astro";
---
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<section class="relative mt-12 md:mt-16">
  <Container>
    <div
      class="mx-auto lg:mx-0 p-5 sm:p-6 py-6 sm:py-8 max-w-5xl rounded-3xl bg-box-bg border border-box-border shadow-lg  shadow-box-shadow md:divide-x divide-box-border grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-8 md:gap-6 lg:gap-12"
    >
      <div class="text-center">
        <i class="fa-solid fa-envelope fa-5x"></i>
        <p class="mt-2 text-heading-3">ENCUESTA</p>
      </div>

      <div class="text-center">
        <i class="fa-solid fa-bell fa-5x"></i>
        <p class="mt-2 text-heading-3">PQRS</p>
      </div>

      <div class="text-center">
        <i class="fa-solid fa-user fa-5x"></i>
        <p class="mt-2 text-heading-3">USUARIOS</p>
      </div>

      <div class="text-center">
        <i class="fa-solid fa-truck-fast fa-5x"></i>
        <p class="mt-2 text-heading-3">DESPACHOS</p>
      </div>
    </div>
  </Container>
</section>
